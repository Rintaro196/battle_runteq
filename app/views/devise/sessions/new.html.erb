<head>
  <title><%= content_for(:title, "ログイン") %></title>
</head>
<body >
  <div class="text-center">
  <h2 class="text-4xl mt-24">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-3">
      <%= f.label :email, "メール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-warning w-96" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-warning w-96" %>
    </div>
<!--
    <% if devise_mapping.rememberable? %>
      <div class="field mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    -->
    <div class="my-2 mt-3">
      <%= f.submit "ログイン", class: "btn btn-outline" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</body>