<head>
    <title><%= content_for(:title, "新規作成") %></title>
</head>
<body>
    <div class="text-center">
      <h2 class="text-4xl py-4">受賞作品作成</h2>
      <%= form_with(model: @award) do |f| %>
        <div class="field mt-3">
          <%= f.label :award_name, "受賞名 （例：一番遊んだで賞）" %><br />
          <%= f.text_field :award_name, autofocus: true, class: "input input-bordered input-warning w-96" %>
        </div>
        <div class="field mt-3">
          <%= f.label :title, "ゲームタイトル" %><br />
          <%= f.text_field :title, class: "input input-bordered input-warning w-96" %>
        </div>
        <div class="mt-3">
          <%= f.label :body, "本文（好きに書いてね！）" %><br />
          <%= f.text_area :body, class: "textarea textarea-warning w-96 h-40" %>
        </div>
        <div class="actions btn btn-outline my-2">
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
</body>